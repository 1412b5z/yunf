<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/selectTitleImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/selectortitle" />
            <!-- 引入分类图片的布局-->
            <include layout="@layout/type_item" />
            <!-- 引入按功效图片的布局-->
            <include layout="@layout/function_item"/>
            <!-- 引入按肤质图片的布局-->
            <include layout="@layout/skin_item"/>
            <!-- 引入按明星gridView的布局-->
            <include layout="@layout/classify_girdview_layout"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>